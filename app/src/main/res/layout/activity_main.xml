<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.hoaiutc95.exercise_2.MainActivity">

    <Spinner
        android:id="@+id/sp_select_color_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/array_color"
        android:layout_marginStart="20dp"
        android:prompt="@string/spinner_prompt"
        android:layout_alignParentLeft="true"
        android:textAlignment="center"/>

    <Spinner
        android:id="@+id/sp_select_color_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/sp_select_color_1"
        android:layout_marginRight="20dp"
        android:entries="@array/array_color"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/tvColor"
        android:layout_width="match_parent"
        android:background="#ffff"
        android:layout_height="match_parent"
        android:layout_below="@+id/sp_select_color_1"
        android:layout_marginTop="20dp"
        android:layout_weight="1" />

</RelativeLayout>
